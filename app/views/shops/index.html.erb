<h1>shops index</h1>
<p>login form </p>
<p><%= @notice %></p>

<p><%= link_to("商品一覧","/management/items/show") %></p>
<br>

<p>login</p>
<%= form_tag("/management/login") do %>
  name:<textarea name="name"></textarea>
  pwd:<input type="password" name="pwd">
  <input type="submit" value="login">
<% end %>

<p>register</p>
<%= form_tag("/management/register") do %>
  name:<textarea name="name"></textarea>
  pwd:<input type="password" name="pwd">
  addles:<textarea name="addles"></textarea>
  <input type="submit" value="register">
<% end %>
